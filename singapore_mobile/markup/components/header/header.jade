include ../index_block/index_block
include ../footer/footer

mixin main-menu__item(title, desc, link, current, active)
    li(class='c-main-menu__item' + (current == active ? ' c-main-menu__item--active' : ''))
        a.c-main-menu__link(href= link)
            p.c-main-menu__item-title= title
            p.c-main-menu__item-desc= desc

mixin important-item(title, desc, icon)
    .c-important-item
        img.c-important-item__img(src='%=static=%img/general/image_' + icon + '.png')
        .c-important-item__content
            p.c-important-item__title= title
            p.c-important-item__desc!= desc

mixin header(active, type)
    header.header
        .header__bg
        a.header__menu-link.js-open-menu(href="#")
        a.header__page-title(href="/mobile")
            //- | Твой <span>Сингапур</span>
            img(src="%=static=%img/general/singapore_logo.svg", alt="").header__logo
        a.header__important-link.js-open-important(href="#")

        .l-grid__main-menu.l-grid__popup.js-main-menu
            .c-main-menu
                .c-main-menu__col
                    ul.c-main-menu__list.c-main-menu__work-list
                        li(class='c-main-menu__head' + (type=='work' ? ' c-main-menu__head--active' : ''))
                            p.c-main-menu__head--small-text Сингапур для
                            p.c-main-menu__head--large-text Бизнеса
                        +main-menu__item('Деловые площадки',
                                        'Умные деловые пространства',
                                        'business-area.html',
                                        'business_area',
                                        active)

                        +main-menu__item('Уникальные площадки',
                                        'Уникальные места для проведения мероприятий',
                                        'unique-site.html',
                                        'unique_site',
                                        active)

                        +main-menu__item('Туры',
                                        'Деловые, образовательные, гастрономические и другие',
                                        'tours.html',
                                        'tour',
                                        active)
                                        
                        +main-menu__item('Деловой туризм',
                                        'Программы и привилегии для бизнес-туристов',
                                        'business-tourism.html',
                                        'business_tourism',
                                        active)
                                        
                        +main-menu__item('История успеха',
                                        'Личный опыт проведения деловых мероприятий',
