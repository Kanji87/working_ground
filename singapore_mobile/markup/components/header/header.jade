                                        'interesting-places.html',
                                        'interesting_place',
                                        active)
                                        
                        +main-menu__item('Гостиницы',
                                        'Для бизнеса и отдыха',
                                        'hotels.html',
                                        'hotel',
                                        active)
                                        
                        +main-menu__item('Кухня',
                                        'Смешение культур и вкусов',
                                        'kitchen.html',
                                        'kitchen',
                                        active)
                                        
                        +main-menu__item('Маршруты',
                                        'Город для интересных прогулок',
                                        'routes.html',
                                        'route',
                                        active)
                                        
