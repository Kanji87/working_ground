mixin main_slide_en
    section.section__main.slider-wrapper
        .main-partner
            a.main-partner__link.main-partner__link--ars(href="http://export.aec.at/earthlab/" target='_blank')
                img(src="%=static=%img/general/ars_logo.svg").main-partner__logo
            a.main-partner__link.main-partner__link--poly(href="https://polymus.ru/ru/" target='_blank')
                img(src="%=static=%img/general/poly_logo.png").main-partner__logo
        .planet-earth
        .main-content
            .main-content__text
                .main-content__text-item
                    h1.main-content__title EARTH LAB
                    h2.main-content__subtitle co-production of the Polytechnic Museum and Ars Electronica Center
                .main-content__text-item
                    p.main-content__date June 22 &ndash; September 25, 2016
            a.main-content__buy-button(href="https://polymus.ru/ru/events/exhibitions/laboratoriya-zemlya/#buyform" target='_blank') buy ticket
            a.main-content__hashtag(href="https://www.instagram.com/explore/tags/%D0%BB%D0%B0%D0%B1%D0%BE%D1%80%D0%B0%D1%82%D0%BE%D1%80%D0%B8%D1%8F%D0%B7%D0%B5%D0%BC%D0%BB%D1%8F/" target='_blank') #earthlab
            p.main-content__location.
                2 Bersenyovskiy lane, bldg. 1 <br>
                Moscow

        img(src="%=static=%img/general/age_12.svg").main-age

        .social-share
            .social-likes
                .facebook
                .vkontakte
                .twitter(data-via="Polytechnicum")
