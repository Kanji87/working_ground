mixin nav(current, active, name)
    li.nav-list__item
        a(
            class='nav-list__item-link ' + (current == active ? 'nav-list__item-link--active' : '')
            href='' + (active ? ('/' + active + '.html') : '#')
        )= name

mixin header(current)
    header.header
        nav.nav
            a.open-btn(href='#')
                != jadeHelpers.Icon.call(locals, {iconName: 'menu_icon', className: 'menu_icon'})
                != jadeHelpers.Icon.call(locals, {iconName: 'menu_close_icon', className: 'menu_close_icon'})
                
            ul.nav-list
                +nav(current, 'exhibition', 'Посетить выставку')
                +nav(current, 'program', 'Программа')
                +nav(current, 'artists', 'Художники')
                +nav(current, 'blog', 'Блог')
                li.nav-list__item
                    .nav-list__sepor |
                li.nav-list__item
                    a.nav-list__item-link.nav-list__lang.nav-list__item-link--active(href='/index.html') ru
                    a.nav-list__item-link.nav-list__lang(href='/en.html') eng

            .social-share
                .social-likes
                    .facebook
                    .vkontakte
                    .twitter(data-via="Polytechnicum")

        a.header__poly-link(href="/")
            != jadeHelpers.Icon.call(locals, {iconName: 'poly_icon', className: 'header__poly-icon'})