doctype html
html(class="no-js", lang="ru")

    include ../components/head/head
    include ../components/header/header
    include ../components/sidebar_select/sidebar_select
    include ../components/paginator/paginator
    include ../components/form_block/form_block

    head
        +head(head.add_clinic)
    body
        |%=symbols=%

        +header('report')

        .l-grid.l-grid--max-height
            //- section.c-sidebar
            //-     h3.c-sidebar__title редактирование клиник

            //-     a.c-link.c-link--sidebar(href="add-clinic.html") Добавить клинику

            //-     a.c-link.c-link--sidebar(href="add-clinic-net.html") Добавить сеть клиник

            //-     a.c-link.c-link--sidebar(href="edit-clinic-net.html") Редактирование сетей клиник

            section.l-grid-content
                form(action="#")
                    .l-content-row
                        .l-content-col.l-content-col-2
                            .l-content__form-block
                                .c-form-title Отчет по ваучерам

                            +form_block(
                                'select',
                                'Город',
                                '','','','',
                                'Выберите город из списка',
                                'Москва',
                                'Санкт-Петербург',
                                'Ярославль')

                            +form_block(
                                'input_text_double',
                                'Отчет за период',
                                'с',
                                'date',
                                'по',
                                'date')

                            .l-content__form-block
                                input.c-input__button.c-input__button--submit(type="submit" value='Получить отчет')


                        .l-content-col.l-content-col-2
                            .l-content__form-block
                                .c-form-title Отчет по регистрациям в аптеках

                            +form_block(
                                'select',
                                'Месяц',
                                '','','','',
                                'Выберите месяц',
                                '10',
                                '11',
                                '01')

                            +form_block(
                                'select',
                                'Год',
                                '','','','',
                                'Выберите год',
                                '1990',
                                '1991',
                                '1992')

                            .l-content__form-block
                                input.c-input__button.c-input__button--submit(type="submit" value='Получить отчет')

                .l-content-row
                    .l-content__form-block
                        .l-content__form-block--bordered
                            .l-content__form-block
                                ul.c-list.c-list--inline
                                    li
                                        input.c-input__button.c-input__button--submit(type="submit" value='Посмотреть рекордсменов')
                                    li
                                        input.c-input__button.c-input__button--submit(type="submit" value='Тотальный отчет')

                                    li
                                        input.c-input__button.c-input__button--submit(type="submit" value='Отчет по регистрациям за месяц')


        script(src='%=static=%js/separate-js/svg4everybody.min.js')
        script svg4everybody();

        //- Main scripts. You can replace it, but I recommend you to leave it here
        script(src='%=static=%js/main%=hash=%%=min=%.js')